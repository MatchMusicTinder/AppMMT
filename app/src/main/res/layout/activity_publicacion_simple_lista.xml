<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="16dp"
    android:background="@drawable/rese"

    tools:context=".PublicacionSimpleLista">

    <ImageView
        android:id="@+id/ivIconoCabecera"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:contentDescription="TODO"
        app:layout_constraintBottom_toTopOf="@+id/tvCabecera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/logo_mm"
        tools:ignore="ContentDescription,HardcodedText,ImageContrastCheck" />

    <TextView
        android:id="@+id/tvCabecera"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:text="¡Match Music!\nNueva Publicación"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.121"
        tools:ignore="HardcodedText" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="442dp" />

    <Button
        android:id="@+id/btnNuevoPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/boton"

        android:backgroundTint="@color/boton"
        android:textColor="#000000"

        android:onClick="launchPublicacionSimple"
        android:text="Nueva Publicación"
        android:textColorHighlight="#B1B1B1" />
</LinearLayout>
